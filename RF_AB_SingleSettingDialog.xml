<GuiXml>

    <!-- New Font definition -->
    <Font name="ZoFontBookTabletSmall" font="$(STONE_TABLET_FONT)|$(KB_24)|soft-shadow-thick"/>
    <Font name="ZoFontGameMini" font="$(BOLD_FONT)|$(KB_13)|soft-shadow-thin"/>

    <!-- Your Controls should be INSIDE this Element -->
    <Controls>
        <TopLevelControl name="RF_AB_SingleSettingDialog" mouseEnabled="true" movable="false" hidden="true">
            <Dimensions x="600" y="400"/>
            <Anchor point="LEFT" relativeTo="GuiRoot" offsetX="100" offsetY="-150"/>
            <!--            <OnUpdate>-->
            <!--                    myAddonUpdate()-->
            <!--            </OnUpdate>-->
            <Controls>
                <Backdrop name="$(parent)_Backdrop" inherits="ZO_DefaultBackdrop" alpha="1.0"/>
                <Button name="$(parent)_CloseButton" inherits="ZO_CloseButton">
                    <Anchor point="TOPRIGHT" offsetX="-10" offsetY="10"/>
                    <OnClicked>
                        RF_AB_SingleSettingDialog_CloseButton_OnClicked(self)
                    </OnClicked>
                </Button>
                <Label name="$(parent)_Title" font="ZoFontWindowTitle"
                       color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED"
                       text="">
                    <Anchor point="TOPLEFT" offsetX="10" offsetY="10"/>
                    <Dimensions y="20"/>
                </Label>
                <Texture name="$(parent)_TopDivider" textureFile="/esoui/art/miscellaneous/horizontaldivider.dds" tier="HIGH">
                    <Dimensions x="600" y="4"/>
                    <Anchor point="TOP" relativeTo="$(parent)" offsetY="28"/>
                </Texture>


                <!-- STUFF -->
                <Control name="$(parent)Button2" inherits="ZO_DialogButton">
                    <Anchor point="BOTTOMLEFT"/>
                </Control>
                <Label name="$(parent)ButtonExtraText2" font="ZoFontGame" horizontalAlignment="CENTER"
                       color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" hidden="false" text="Cancel">
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Button2" relativePoint="BOTTOMLEFT" offsetY="5"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Button2" relativePoint="BOTTOMRIGHT" offsetY="5"/>
                    <Dimensions x="100"/>
                </Label>
                <Control name="$(parent)Button1" inherits="ZO_DialogButton">
                    <Anchor point="BOTTOMLEFT"/>
                </Control>
                <Label name="$(parent)ButtonExtraText1" font="ZoFontGame" horizontalAlignment="CENTER"
                       color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" hidden="false" text="Ok">
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Button1" relativePoint="BOTTOMLEFT" offsetY="5"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Button1" relativePoint="BOTTOMRIGHT" offsetY="5"/>
                    <Dimensions x="100"/>
                </Label>

                <!--                <Button name="$(parent)_CancelButton" clickSound="Click" mouseOverBlendMode="ADD" inherits="ZO_DefaultButton">-->
                <!--                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="-->
                <!--                    5" offsetY="5" text="Cancel"/>-->
                <!--                    <Dimensions x="80" y="40"/>-->
                <!--                    <Textures normal="EsoUI/Art/Buttons/closebutton_up.dds"-->
                <!--                              pressed="EsoUI/Art/Buttons/closebutton_down.dds"-->
                <!--                              mouseOver="EsoUI/Art/Buttons/closebutton_mouseover.dds"-->
                <!--                              disabled="EsoUI/Art/Buttons/closebutton_disabled.dds"/>-->
                <!--                    <OnClicked>-->
                <!--                        RF_AB_SingleSettingDialog_CloseButton_OnClicked(self)-->
                <!--                    </OnClicked>-->
                <!--                </Button>-->
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
